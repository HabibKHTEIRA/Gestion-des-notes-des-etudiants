{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }
        #register {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
        .block {
            background-color: #aaffaa;
            border-radius: 0px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 100%;
            max-width: 330px;
        }
        .form-row {
            margin-bottom: 20px;
        }
        .form-row label {
            display: block;
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .form-row input[type="text"],
        .form-row input[type="email"],
        .form-row input[type="password"] {
            border-radius: 25px;
            border: 1px solid #ccc;
            font-size: 14px;
            height: 40px;
            padding: 0 20px;
            width: 100%;
            box-sizing: border-box;
        }
        .form-row input[type="checkbox"] {
            margin-right: 5px;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 25px;
            color: #fff;
            cursor: pointer;
            font-size: 14px;
            height: 40px;
            transition: background-color 0.3s;
            width: 100%;
        }
        .btn-primary:hover {
            background-color: #0062cc;
        }
        .ml-3 {
            margin-left: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="register">
        <div class="block">
            <h2 class="pb-30">Inscription</h2>
            {{ form_start(form) }}
            {{ form_rest(form) }}
            <div class="form-row">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <button class="btn btn-primary btn-sm mr-10" type="submit">Inscription</button>
                <small class="ml-3"><a href="{{ path('login') }}">Vous avez déjà un compte ?</a></small>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


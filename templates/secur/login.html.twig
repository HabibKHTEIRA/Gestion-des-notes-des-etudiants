{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }
        #login {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
        .block {
            background-color: #aaffaa;
            border-radius: 0px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 100%;
            max-width: 330px;
        }
        .form-row {
            margin-bottom: 20px;
        }
        .form-row label {
            display: block;
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .form-row input[type="text"],
        .form-row input[type="password"] {
            border-radius: 25px;
            border: 1px solid #ccc;
            font-size: 14px;
            height: 40px;
            padding: 0 20px;
            width: 100%;
            box-sizing: border-box;
        }
        .form-row input[type="checkbox"] {
            margin-right: 5px;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 25px;
            color: #fff;
            cursor: pointer;
            font-size: 14px;
            height: 40px;
            transition: background-color 0.3s;
            width: 100%;
        }
        .btn-primary:hover {
            background-color: #0062cc;
        }
        .ml-3 {
            margin-left: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="login">
        <div class="block">
            <h2 class="pb-30">Connexion</h2>
            <form action="{{ path('login') }}" method="post">
                <div class="form-row">
                    <label for="email">Email</label>
                    <input type="text" id="email" autofocus name="_username" value="{{ username }}">
                </div>
                <div class="form-row">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="_password">
                </div>
                <div class="form-row">
                    <input type="checkbox" id="remember_me" name="_remember_me">
                    <label for="remember_me">Se souvenir de moi</label>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                {% if error %}
                    <ul class="form_errors pb-20">
                        <li style="color:red;">{{ error.messagekey | trans(error.messageData , 'security') }}</li>
                    </ul>
                {% endif %}
                <button class="btn btn-primary mr-10" type="submit">Connexion</button>
                <small class="ml-3"><a href="{{ path('signup') }}">Vous n'avez encore pas de compte ?</a></small>
            </form>
        </div>
    </div>
{% endblock %}


